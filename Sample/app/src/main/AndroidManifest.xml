        <activity android:name=".JavaCallRelativeActivity" />
        <activity android:name=".JavaCallWithListenerActivity" />
        <activity android:name=".AttachAndDettachActivity" />
        <activity android:name=".ListViewActivity" />
        <activity android:name=".ViewPagerActivity" />
        <activity android:name=".PagerAndListActivity" />
        <activity android:name=".FragmentReplaceActivity" />
        <activity android:name=".DialogSampleActivity" />
        <activity
