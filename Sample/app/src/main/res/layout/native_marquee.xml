<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical" >
    <android.support.v7.widget.CardView
        android:id="@+id/ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="2sp">
        <RelativeLayout
            android:id="@+id/ad2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:visibility="visible">
            <net.nend.android.NendAdNativeImageView
                android:id="@+id/ad_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#AAA" />
            <net.nend.android.NendAdNativeTextView
                android:id="@+id/ad_pr"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#000"
                android:layout_toRightOf="@+id/ad_image"
                android:layout_toEndOf="@+id/ad_image"
                android:textColor="#ff0000"
                android:gravity="center_vertical|center_horizontal" />
            <net.nend.sample.MarqueeView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/ad_pr"
                android:layout_toEndOf="@+id/ad_pr"
                android:scrollbars="none"
                android:id="@+id/horizontalScrollView">
                <net.nend.android.NendAdNativeTextView
                    android:id="@+id/ad_content"
                    android:layout_width="wrap_content"
                    android:background="#000"
                    android:layout_height="match_parent"
                    android:textColor="#ff9900"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:paddingRight="1dp"
                    android:paddingLeft="1dp"
                    android:gravity="center_vertical|center_horizontal" />
            </net.nend.sample.MarqueeView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>